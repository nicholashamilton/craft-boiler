{% apply spaceless %}
<!DOCTYPE html>
<html
    lang="en-US"
    data-env="{{ craft.app.config.env }}"
>
    <head>
        <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover"/>
        <meta name="referrer" content="origin-when-cross-origin"/>

        <title>CraftCMS Vite Boilerplate</title>
        <meta name="description" content="CraftCMS Boilerplate">

        {% set mainCss = craft.vite.asset("src/styles/main.scss") %}
        <link rel="preload" href="{{ mainCss }}" as="style">
        <link rel="stylesheet" href="{{ mainCss }}">

    </head>

    <body class="preload">

        {% block page %}{% endblock %}

        {{ craft.vite.script("src/app/app.ts") }}

    </body>

</html>
{% endapply %}
